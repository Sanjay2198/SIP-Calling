# Copy this file to `.env` and update with your credentials.
# Never commit real credentials.

# --- SIP / Asterisk / FreeSWITCH credentials (examples) ---
SIP_DOMAIN=pbx.example.com
SIP_USERNAME=1001
SIP_PASSWORD=change-me
SIP_PORT=5060
SIP_TRANSPORT=UDP

# --- Django backend ---
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database (Postgres recommended for prod) ---
DATABASE_URL=sqlite:///db.sqlite3

# --- Asterisk ARI ---
ARI_BASE_URL=http://localhost:8088
ARI_USERNAME=ariuser
ARI_PASSWORD=aripass
ARI_APP_NAME=call-center-app

# --- Realtime / Channels ---
REDIS_URL=redis://localhost:6379/0
